@using System;
@using System.Configuration;
@using System.Data.SqlClient;
@{
    ViewData["Title"] = "Checkin";

    // Connecting to database.
    String connectionString = "Server=tcp:amnotdaniel.duckdns.org,1433;Initial Catalog=projectstudio;Persist Security Info=False;User ID=sa;Password=ProjectStudio1;MultipleActiveResultSets=False;Encrypt=False;TrustServerCertificate=False;Connection Timeout=30;";
    SqlConnection db = new SqlConnection(connectionString);

    // Getting form values from page.
    string fName = Request.Query["fName"];
    string lName = Request.Query["lName"];
    string phone = Request.Query["phoneNum"];

    // Checking if user is already in database, adding if not.
    if (!String.IsNullOrWhiteSpace(fName) && !String.IsNullOrWhiteSpace(fName) && !String.IsNullOrWhiteSpace(phone))
    {
        fName = fName.ToUpper();
        lName = lName.ToUpper();

        SqlCommand userIDCheck = new SqlCommand("SELECT * FROM Users WHERE firstName = @firstName AND lastName = @lastName AND phoneNumber = @phoneNum", db);

        userIDCheck.Parameters.AddWithValue("@firstName", fName);
        userIDCheck.Parameters.AddWithValue("@lastName", lName);
        userIDCheck.Parameters.AddWithValue("@phoneNum", phone);

        db.Open();
        var userIDResult = userIDCheck.ExecuteScalar();

        System.Diagnostics.Debug.WriteLine(userIDResult);

        if (userIDResult == null)
        {
            System.Diagnostics.Debug.WriteLine("It was null, big sad.");
        }
    }
}

