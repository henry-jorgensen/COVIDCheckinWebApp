@page
@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-dark bg-primary navbar-expand-lg">
        <a class="navbar-brand" href="#">
            <img src="https://getbootstrap.com/docs/4.1/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            Venue Management
        </a>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item disabled">
                    <a class="nav-link" href="login">Login <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="register">Register <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="checkin">Checkin <span class="sr-only">(current)</span></a>
                </li>

                <li class="nav-item disabled">
                    <a class="nav-link" href="reports">Reports <span class="sr-only">(current)</span></a>
                </li>
            </ul>
        </div>
    </nav>
</header>

<div class="container">
    <main role="main" class="pb-3">
        <br /><br /><br />
        @{ 
            if (Request.Cookies["email"] != null && Request.Cookies["email"] != null)
            {
                <div class="row d-flex justify-content-center">
                    <div class="col-sm-6">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Your details</h5>

                                Email: @Request.Cookies["email"]<br />
                                Phone: @Request.Cookies["phone"]<br />
                                Password: @Request.Cookies["password"]<br />
                                Password2: @Request.Cookies["password2"]<br />
                                Business name: @Request.Cookies["bname"]<br />
                                Business owner: @Request.Cookies["bowner"]<br />
                                Business address: @Request.Cookies["baddress"]<br />
                                Business number: @Request.Cookies["bnumber"]<br />
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </main>
</div>